# --- Global Security Rules (CRITICAL) ---
# Block all cryptographic keys
*.pem
*.key
*.p12
*.pfx

# Block all encrypted data files
*.enc

# Block all local databases
*.db
*.sqlite
*.sqlite3

# --- Project Structure & Dependencies ---

# Editor / IDE
.vscode/
.idea/
.cursor/
*.swp
*.swo
.DS_Store
Thumbs.db
ehthumbs.db
Desktop.ini

# Root Dependencies (Global)
node_modules/
dist/
build/
coverage/
.npm/
.yarn/

# Python (Global)
__pycache__/
*.py[cod]
*$py.class
venv/
.venv/
env/
.env
.env.*
.pytest_cache/
htmlcov/
site/

# --- Specific Backend Ignores ---
backend/instance/
backend/benchmark_results.csv
backend/test_record_v1.txt
backend/app/services/audit/*.log

# Backend Cloud Storage (Simulation)
# Allow structure (.gitkeep) but block content
backend/cloud/keys/*
!backend/cloud/keys/.gitkeep
backend/cloud/data/*
!backend/cloud/data/.gitkeep
backend/cloud/meta/*
!backend/cloud/meta/.gitkeep
# Fallback
backend/cloud/*
!backend/cloud/.gitkeep

# --- Specific Frontend Ignores ---
# (Most are covered by global rules like node_modules, dist, .env)
frontend/npm-debug.log*
frontend/yarn-debug.log*
frontend/yarn-error.log*

# --- Root Cloud Directory (Legacy/Global) ---
cloud/keys/*
!cloud/keys/.gitkeep
cloud/data/*
!cloud/data/.gitkeep
cloud/meta/*
!cloud/meta/.gitkeep
cloud/*
!cloud/.gitkeep

# --- Miscellaneous ---
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
