backend/cloud/keys/*
!backend/cloud/keys/.gitkeep
backend/cloud/data/*
!backend/cloud/data/.gitkeep
backend/cloud/meta/*
!backend/cloud/meta/.gitkeep
# Fallback
backend/cloud/*
!backend/cloud/.gitkeep

# Backend Services specific ignores
backend/app/services/storage/*.db
backend/app/services/audit/*.log

