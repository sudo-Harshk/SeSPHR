# --- Global Security Rules (CRITICAL) ---
# Block all cryptographic keys
*.pem
*.key
*.p12
*.pfx

# Block all encrypted data files
*.enc

# Block all local databases
*.db
*.sqlite
*.sqlite3

# --- Project Structure & Dependencies ---

# Editor / IDE
.vscode/
.idea/
.cursor/
*.swp
*.swo
.DS_Store
Thumbs.db

# Root Dependencies
node_modules/
venv/
.venv/
env/

# --- Backend Specific ---
backend/venv/
backend/.venv/
backend/__pycache__/
backend/*.pyc
backend/instance/
backend/.env
backend/.pytest_cache/
backend/benchmark_results.csv
backend/test_record_v1.txt

# Backend Cloud Storage (Simulation)
